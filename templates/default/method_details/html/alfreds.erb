<% if object[:alfreds] %>
<div class="tags">
  <p class="tag_title">Alfred scenario's:</p>
  <ul class="specs">
    <% object[:alfreds].each do |alfred| %>
      <li><%= alfred[:name] %>
        <div class="source_code">
          <table>
            <tr>
              <td>
                <pre class="lines">


<%= alfred[:source].split("\n").size.times.to_a.map {|i| alfred[:line] + i }.join("\n") %></pre>
              </td>
              <td>
                <pre class="code"><span class="info file"># File '<%= h alfred[:file] %>', line <%= alfred[:line] %></span>

<%= html_syntax_highlight format_source(alfred[:source]) %></pre>
              </td>
            </tr>
          </table>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<% end %>